# -fsanitize=address -g3

#Variables

NAME		=	philo
HEADERS		=	-I includes
SRC_DIR		=	srcs/
OBJ_DIR		=	objs/
CC			=	gcc
CFLAGS		=	-Wall -Wextra -Werror
LEAKS		=	leaks --atExit -- 

# Colors

RED 		=	\033[1;91m
YELLOW		=	\033[1;93m
GREEN		=	\033[1;92m
BLUE		=	\033[1;94m
PURPLE		=	\033[1;95m
DEF_COLOR	=	\033[0;39m
GRAY		=	\033[0;90m
MAGENTA		=	\033[0;95m
CYAN		=	\033[1;96m
WHITE		=	\033[0;97m
RAINBOW		=	$(RED)-$(YELLOW)-$(GREEN)-$(CYAN)-$(BLUE)-$(PURPLE)-

#Sources

FILES		=	main utils1 utils2 philos_phunctions philos_utils threads_routines
SRC			=	$(addprefix $(SRC_DIR), $(addsuffix .c, $(FILES)))
OBJ			=	$(addprefix $(OBJ_DIR), $(addsuffix .o, $(FILES)))

#Commands

all:			$(OBJ_DIR) $(NAME)

$(NAME):		$(OBJ)
					@echo "$(RAINBOW)$(RAINBOW)$(RAINBOW)$(DEF_COLOR)"
					$(CC) $(CFLAGS) $(OBJ) $(HEADERS) -pthread -o $(NAME)
					@echo ""
					@echo "$(GREEN)$(NAME) est compilÃ© !$(DEF_COLOR)ðŸ¥¶ðŸ¥¶ðŸ¥¶"
					@echo "$(RAINBOW)$(RAINBOW)$(RAINBOW)$(DEF_COLOR)"

$(OBJ_DIR)%.o:	$(SRC_DIR)%.c	
					@echo "$(YELLOW)$< est dans le four...$(DEF_COLOR)ðŸ¥µðŸ¥µðŸ¥µ"
					@$(CC) $(CFLAGS) $(HEADERS) -o $@ -c $<

$(OBJ_DIR):
					@mkdir -p $(OBJ_DIR)

clean:
					@rm -rf $(OBJ_DIR)
					@echo "$(RAINBOW)$(RAINBOW)$(RAINBOW)$(DEF_COLOR)"
					@echo "$(BLUE)Ã  la poubelle les .o$(DEF_COLOR)ðŸ¤“ðŸ¤“ðŸ¤“"

fclean:			clean
					@rm -rf $(NAME)
					@echo "$(CYAN)Ã  la poubelle l'exec$(DEF_COLOR)ðŸ¤¤ðŸ¤¤ðŸ¤¤"

re:				fclean all

run:			re
					$(LEAKS)./$(NAME) 10 1000 200 200 10

.PHONY:			all clean fclean re run
